<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultButton" parent="Theme.AppCompat.Light">
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:textColorTertiary">#ffffff</item>
        <item name="android:padding">14sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DefaultTextBox" parent="Theme.AppCompat.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#1c4188</item>
        <item name="android:textSize">17sp</item>
        <!--<item name="android:paddingStart">20dp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:colorAccent" tools:targetApi="lollipop">#1c4188</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#1c4188</item>
        <item name="android:textColor">#1c4188</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#1c4188</item>
    </style>

    <style name="DefaultLabel" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#1c4188</item>
    </style>
    <style name="EditTextDefaultStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorGray</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:buttonCornerRadius" tools:ignore="NewApi">20dp</item>
        <item name="android:bottomLeftRadius">20dp</item>
        <item name="android:bottomRightRadius">20dp</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
    </style>

</resources>