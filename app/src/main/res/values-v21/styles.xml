<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DefaultButton" parent="Theme.AppCompat.Light" tools:ignore="DuplicateDefinition">
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColorTertiary">#ffffff</item>
        <item name="android:padding">14sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DefaultTextBox" parent="Theme.AppCompat.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#1c4188</item>
        <item name="android:textSize">17sp</item>
        <!--<item name="android:paddingStart">20dp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:colorAccent">#1c4188</item>
        <item name="android:colorControlNormal">#1c4188</item>
        <item name="android:textColor">#1c4188</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#1c4188</item>
    </style>




</resources>